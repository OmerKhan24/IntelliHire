# Database Configuration
# For local development (MySQL):
DATABASE_URI=mysql://root:@localhost/intellihire_db
# For Render/Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Gemini AI Configuration (used for TTS/STT only)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Azure AI Configuration (for interview scoring)
AZURE_API_KEY=your-azure-api-key-here

# GitHub Copilot API Configuration (used for question generation and scoring)
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-token-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000
# For production: https://your-frontend-domain.com

# Port Configuration (optional, default: 5000)
PORT=5000
